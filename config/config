export PLUGIN_SWARM_CORE=$PLUGIN_SWARM_BASE/core
# Service
export PLUGIN_SWARM_SERVICE=${PLUGIN_SWARM_SERVICE:-$HOME/swarm}

# Configs
export PLUGIN_SWARM_CONFIGS=$ZMICRO_APP_CONFIGS_PATH/swarm
# Logs
export PLUGIN_SWARM_LOGS=$ZMICRO_PLUGINS_LOGS_PATH/swarm
# Data
export PLUGIN_SWARM_DATA=$ZMICRO_PLUGINS_DATA_PATH/swarm

export DOCKER_COMPOSE_V1="docker-compose-v1"

